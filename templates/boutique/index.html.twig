{% extends 'base.html.twig' %}

{% block title %} Boutique {% endblock %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <a class="btn-back text-secondary" href="{{ path("app_default_index") }}">
                <i class="fas fa-2x fa-arrow-circle-left"></i>
            </a>
            <h3>
                <i class="fas fa-store"></i>
                {% trans %} boutique.index.boutique_titre {% endtrans %}
                <span class="badge badge-pill badge-info">{{ categories | length }}</span>
                {% trans %} boutique.index.rayon_propose {% endtrans %}
            </h3>
        </div>

        <div class="card-body row">
            {% for category in categories %}
            <div class="col-md-3">
                <div class="card clickable" onclick="location = '{{ path("app_boutique_rayon", {'idCategory' : category.id }) }}'">
                    <img src="{{ asset(category.visuel) }}" class="card-img-top" alt="{{ category.libelle }}">
                    <div class="card-body">
                        <h4 class="card-title">{{ category.libelle }}</h4>
                        <p class="card-text">
                            <i>{{ category.texte }}</i>
                        </p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
